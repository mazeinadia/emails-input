.emails-input {
  box-sizing: border-box;
  max-width: 100%;
  max-height: 100%;
  width: $containerWidth;
  background: $colors.primaryBg;
  box-shadow: 0 8px 20px $colors.shadow;
  border-radius: 8px;
  color: $colors.primaryText;
  font-size: 14px;
  line-height: 24px;
}

.title {
  font-size: 20px;
  line-height: 28px;
  margin-bottom: 24px;
  font-weight: normal;

  b {
    font-weight: bold;
  }
}

.content {
  padding: 32px 50px 24px;
  background-color: $colors.secondaryBg;
}

.footer {
  padding: 24px 50px 16px;
}

.emails-container {
  position: relative;
  display: flex;
  flex-wrap: wrap;
  align-content: flex-start;
  width: 100%;
  height: $inputHeight;
  max-height: $inputHeight;
  padding: 8px 7px;
  overflow-y: auto;
  background: $colors.primaryBg;
  border: 1px solid $border;
  border-radius: 4px;
  cursor: text;
}

.button {
  background: $colors.accentBg;
  border-radius: 6px;
  color: $colors.accentText;
  padding: 8px 16px;
  transition: background-color 0.2s ease-in-out;

  &:hover {
    background-color: $colors.accentHoverBg;
  }

  &:first-child {
    margin-right: 16px;
    margin-bottom: 16px;
  }
}

.input {
  width: 130px;
  min-width: 130px;
  height: 24px;
  overflow: hidden;
  line-height: 24px;
}

.hidden-input-value {
  position: absolute;
  max-width: calc(100% - 14px);
  visibility: hidden;
  z-index: -1;
  word-wrap: break-word;
}
